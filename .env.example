# Frame Configuration
# The base URL where your application is deployed
NEXT_PUBLIC_FRAME_URL=https://your-domain.com

# Application name displayed in frames
NEXT_PUBLIC_APP_NAME="Wallet Survey"

# Database Configuration
# Currently supports 'file' for JSON file storage
# Future: 'postgres', 'mongodb', etc.
DATABASE_TYPE=file

# Zapper API Configuration
# Get your API key from: https://zapper.fi/api
# Used for wallet profile analysis and DeFi data
ZAPPER_API_KEY=your_zapper_api_key_here

# Development Environment
# Set to 'development' for local, 'production' for deployment
NODE_ENV=development

# Optional: Additional API Keys
# Add other service API keys as needed
# ALCHEMY_API_KEY=your_alchemy_key_here
# INFURA_API_KEY=your_infura_key_here
